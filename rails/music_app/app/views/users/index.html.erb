<h1 class="page-header">Users</h1>
<ul class="user-list">
  <% @users.each do |user| %>
    
    <li class="user-list-item">
      <p>
        <%= user.email %> - 
      </p>
        <br>
        <% if user.admin %>
          admin user
        <% else %>
          <a href="<%= admin_user_url(user) %>" class="button">Make Admin</a>
        <% end %>
    </li>

  <% end %>
</ul>

