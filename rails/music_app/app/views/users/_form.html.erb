<% action_url = action == :sign_up ? users_url : session_url%>

<br>
<br>
<form class="form" action="<%= action_url %>" method="post">
  <%= auth_token %>

  <div class="form-div">
    <label class="form-label" for="email">Email</label>
    <input class="form-input" type="text" id="email" name="user[email]">
  </div>

  <br>
  
  <div class="form-div">
    <label class="form-label" for="password">Password</label>
    <input class="form-input" type="password" id="password" name="user[password]">
  </div>

  <br>
  <div class="form-div">
    <input class="form-input" type="submit" value="Submit">
  </div>
</form>