<h1>Show Band</h1>
<br>
<h1>
  band_id: <%= @band.id %>
</h1>
<br>
<h1>
  band_name: <%= @band.name %>
</h1>

<h4 class="sub-header">Links</h4>
<ul class="link-list">
  <li class="link-list-item">
    <%= link_to 'New Album', band_url(@band), class: "button" %>
  </li>

  <li class="link-list-item">
    <%= link_to 'Edit Band', edit_band_url(@band), class: "button" %>
  </li>

  <li class="link-list-item">
    <form action="<%= band_url(@band) %>" method="post">
      <%= auth_token %>
      <%= delete_hidden_input %>
      <input type="submit" value="Destroy Band" class="button">
    </form>
  </li>
  <li class="link-list-item">
    <%= link_to 'All Bands', bands_url, class: "button" %>
  </li>
</ul>