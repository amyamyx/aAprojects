<h1>Add a New Cat</h1>

<form action="<%= cats_url %>" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="cat[name]">

  <br/>
  <br/>

  <label for="color">Color:</label>
  <select id="color" name="cat[color]">
    <option disabled selected>--Please Select--</option>
    <option value="yellow">Yellow</option>
    <option value="white">White</option>
    <option value="black">Black</option>
    <option value="flower">Flower</option>
    <option value="grey">Grey</option>
  </select>

  <br/>
  <br/>

  <label for="birth_date">Date of Birth:</label>
  <input type="date" id="birth_date" name="cat[birth_date]">

  <br/>
  <br/>

  <label for="sex">Sex:</label>
    <input type="radio" id ="male" name="cat[sex]" value="M">
    <label for="male">Male</label>
    <input type="radio" id ="Female" name="cat[sex]" value="F">
    <label for="female">Female</label>

  <br/>
  <br/>
  
  <label for="description">Description:</label>
  <textarea id="description" name="cat[description]"></textarea>

  <br/>
  <br/>
  <input type="submit" value="Add Cat!">
</form>