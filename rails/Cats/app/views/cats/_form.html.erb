<% if action == :edit %>
  <% path = cat_url(cat)%>
  <% button_text = "Update!" %>
<% else%>
  <% path = cats_url %>
  <% button_text = "Add Cat!" %>
<% end %>



<form action="<%= path %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end%>

  <label for="name">Name:</label>
  <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">

  <br/>
  <br/>

  <label for="color">Color:</label>
  <select id="color" name="cat[color]">
    <option <%= action == :edit ? "" : "selected" %> disabled>--Please Select--</option>
    <option value="yellow" <%= cat.color == "yellow" ? "selected" : "" %>>Yellow</option>
    <option value="white" <%= cat.color == "white" ? "selected" : "" %>>White</option>
    <option value="black" <%= cat.color == "black" ? "selected" : "" %>>Black</option>
    <option value="flower" <%= cat.color == "flower" ? "selected" : "" %>>Flower</option>
    <option value="grey" <%= cat.color == "grey" ? "selected" : "" %>>Grey</option>
  </select>

  <br/>
  <br/>

  <label for="birth_date">Date of Birth:</label>
  <input type="date" id="birth_date" name="cat[birth_date]" value=<%= cat.birth_date %>>

  <br/>
  <br/>

  <label for="sex">Sex:</label>
    <input type="radio" id ="male" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>>
    <label for="male">Male</label>
    <input type="radio" id ="Female" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>>
    <label for="female">Female</label>

  <br/>
  <br/>
  
  <label for="description">Description:</label>
  <textarea id="description" name="cat[description]"><%= cat.description %></textarea>

  <br/>
  <br/>
  <input type="submit" value="<%= button_text %>">
</form>