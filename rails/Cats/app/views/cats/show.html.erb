<a href="<%= new_cat_url %>">Add a new cat</a>
<br>
<h1><%= @cat.name %></h1>
<table>
  <thead>
    <tr>
      <th><%= @cat.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><strong>Sex</strong></td>
      <td><%= @cat.sex %></td>
    </tr>

    <tr>
      <td><strong>Color</strong></td>
      <td><%= @cat.color %></td>
    </tr>
    
    <tr>
      <td><strong>Age</strong></td>
      <td><%= @cat.age %></td>
    </tr>

    <tr>
      <td><strong>Description</strong></td>
      <td><%= @cat.description %></td>
    </tr>
  </tbody>
</table>

<br>

<% if current_user.id != @cat.user_id %>
  <a href="<%= new_cat_rental_request_url %>">Rent the cat</a>
<% end%>

<br>
<br>

<label for="request_list">Existing Requests</label>
<ul id="request_list">
  <% @requests.each do |request| %>
    <%= render "request", request: request, owner_id: @cat.user_id %>
  <% end %>
</ul>

